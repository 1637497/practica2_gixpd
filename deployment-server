apiVersion: apps/v1
kind: Deployment
metadata:
  name: server-deployment
  labels:
    app: appxd
spec:
  replicas: 3
  selector:
    matchLabels:
      app: appxd
  template:
    metadata:
      labels:
        app: appxd
    spec:
      containers:
      - name: model-server
        image: model-server:default
        command: ["flask", "--app", "main-server", "run", "--host=0.0.0.0"]
        env: 
        - name: MODEL_PATH
          valueFrom: 
            configMapKeyRef:
              name: configmap
              key: MODEL_TRAIN
        volumeMounts:
        - name: model-data
          mountPath: "/model"       
      volumes:
      - name: model-data
        hostPath: 
          path: "/tmp"
          type: Directory
