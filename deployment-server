apiVersion: v1
kind: Deployment
metadata:
  name: server-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: appxd
  template:
    metadata:
      labels:
        app: appxd
    spec:
      containers:
      - name: model-server
        image: model-server:default
      volumes:
      - name: volume-tmp
        hostPath: 
         path: /tmp
         type: Directory
