apiVersion: apps/v1
kind: Deployment
metadata:
  name: server-deployment
  labels:
    app: appxd
spec:
  replicas: 3
  selector:
    matchLabels:
      app: appxd
  template:
    metadata:
      labels:
        app: appxd
    spec:
      containers:
      - name: model-server
        image: model-server:default
        env: 
        - name: MODEL_PATH
          valueFrom: 
            configMapKeyRef:
              name: configmap
              key: MODEL_PATH
        volumeMounts:
        - name: model-data
          mountPath: /model/model.npy
                resources:
          limits:
            cpu: "500m"
            memory: "128Mi"
          requests:
            cpu: "250m"
            memory: "64Mi"
        volumeMounts:
        - name: model-data
          mountPath: /tmp
        readinessProbe:
          httpGet:
            path: /healthz
            port: 5000
          initialDelaySeconds: 20
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /healthz
            port: 5000
          initialDelaySeconds: 20
          periodSeconds: 10
      volumes:
      - name: model-data
        hostPath: 
          path: /tmp
          type: Directory
